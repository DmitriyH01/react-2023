{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    ////////////////////////////////////////
    "strict": true,
    "esModuleInterop": true, // if some library don`t have default import
    // "checkJs": true,            /*  if need to use js "near" TS */
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "jsx": "react",
    "rootDir": "./src/",
    "outDir": "./dist/"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
